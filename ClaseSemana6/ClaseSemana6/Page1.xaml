<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaseSemana6.Page1">
    <ContentPage.Content>
        <StackLayout>
           

            <Entry x:Name="txtCodigo" Placeholder="Codigo" />
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Edad" Keyboard="Numeric"/>

            <Button x:Name="btnInsertar" Text="Insertar" Clicked="btnInsertar_Clicked"/>
            <Button x:Name="btnListar" Text="Listar" Clicked="btnListar_Clicked"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>